<main>
    <form action="/profile/{{profile._id}}?_method=PUT" method="POST" class="form" id="form_profile">
        <h3 class="heading"> CHỈNH SỬA </h3>
        <h3 class="heading"> TÀI KHOẢN </h3>
        <div class="spacer"></div>
        <h3>Tài khoản: <i>{{profile.email}}</i></h3>
        <div class="form-group">
            <label for="fullname" class="form-label">Tên đầy đủ</label>
            <input id="fullname" name="fullname" type="text" value="{{profile.name}}" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            <input id="password" name="password" type="password" placeholder='Nhập mật khẩu mới' class="form-control" > 
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password_confirmation" class="form-label">Nhập lại mật khẩu</label>
            <input id="password_confirmation" name="password_confirmation" type="password" placeholder='Nhập lại mật khẩu mới' class="form-control">
            <span class="form-message"></span>
        </div>
        <button class="form-profile">LƯU LẠI</button>
        <button class="form-profile">HUỶ BỎ</button>
    </form>
</main>